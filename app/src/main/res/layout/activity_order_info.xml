<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OrderInfo">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/profLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">



            <TextView
                android:id="@+id/oProfTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:text="Profession"
                android:textColor="#ffffff"
                android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/addressLayout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/profLayout"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/oTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="14dp"
            android:text="ordered time"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/oAddressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignStart="@+id/oTimeTextView"
            android:layout_below="@+id/oTimeTextView"
            android:layout_marginRight="100dp"
            android:text="Address"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/oStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/oTimeTextView"
            android:layout_marginEnd="22dp"
            android:text="Status"
            android:textSize="17sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/jobLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/addressLayout"
        android:background="?android:attr/colorButtonNormal"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/oPersonImageView"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="26dp"
            app:srcCompat="@drawable/personicon" />

        <TextView
            android:id="@+id/oJobTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="63dp"
            android:text="Job Assignment"
            android:textSize="20sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/jobLayout"
        android:layout_centerHorizontal="false"
        android:orientation="horizontal"
        android:textAlignment="textEnd">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:text="Rate"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView12"
            android:layout_marginTop="65dp"
            android:text="Tax"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView12"
            android:layout_marginTop="115dp"
            android:text="Discount"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView12"
            android:layout_marginTop="165dp"
            android:text="GrandTotal"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView12"
            android:layout_marginTop="215dp"
            android:text="StartTime"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView12"
            android:layout_marginTop="265dp"
            android:text="EndTime"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView12"
            android:layout_marginTop="315dp"
            android:text="TotalTime"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView12"
            android:layout_marginTop="365dp"
            android:text="PaymentStatus"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/jobDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="415dp"
            android:padding="5dp"
            android:text="Job Details"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView12"
            android:layout_marginEnd="20dp"
            android:text="TextView"
            android:textAlignment="textEnd"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/taxTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/rateTextView"
            android:layout_alignTop="@+id/textView13"
            android:text="TextView"
            android:textAlignment="textEnd"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/discountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/rateTextView"
            android:layout_alignTop="@+id/textView14"
            android:text="TextView"
            android:textAlignment="textEnd"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/grandTotalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/rateTextView"
            android:layout_alignTop="@+id/textView15"
            android:text="TextView"
            android:textAlignment="textEnd"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/startTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/rateTextView"
            android:layout_alignTop="@+id/textView16"
            android:text="TextView"
            android:textAlignment="textEnd"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/endTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/rateTextView"
            android:layout_alignTop="@+id/textView17"
            android:text="TextView"
            android:textAlignment="textEnd"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totalTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/rateTextView"
            android:layout_alignTop="@+id/textView18"
            android:text="TextView"
            android:textAlignment="textEnd"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/paymentStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/rateTextView"
            android:layout_alignTop="@+id/textView19"
            android:layout_marginLeft="60dp"
            android:text="TextView"
            android:textAlignment="textEnd"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/serviceLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/mainLayout"
        android:layout_centerHorizontal="false"
        android:background="?attr/colorButtonNormal"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/oServicesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:text="Service required for?"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/oServiceAnsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentTop="false"
            android:layout_alignStart="@+id/oServicesTextView"
            android:layout_below="@+id/oServicesTextView"
            android:text="service"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/placeLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/serviceLayout"
        android:layout_centerHorizontal="false"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/oWorkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:text="Where do you require the Service?"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/oWorkAnsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentTop="false"
            android:layout_alignStart="@+id/oWorkTextView"
            android:layout_below="@+id/oWorkTextView"
            android:text="work place"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/changeStatusLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/placeLayout"
        android:layout_centerHorizontal="false"
        android:background="@android:color/holo_orange_dark"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/oChangeBookingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="Cancel Booking"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold" />

    </RelativeLayout>


 </LinearLayout>

</ScrollView>