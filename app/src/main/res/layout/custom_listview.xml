<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/itemLayout">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">


            <TextView
                android:id="@+id/professionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/orderNoTextView"
                android:text="profession"
                android:textAlignment="viewStart"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/orderNoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/orderTimeTextView"
                android:layout_centerVertical="true"
                android:text="OrderNo"
                android:textAlignment="viewStart"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/orderTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/personView"
                android:layout_toEndOf="@+id/personView"
                android:text="OrderTime"
                android:textAlignment="viewStart"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/statusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignTop="@+id/orderTimeTextView"
                android:text="status"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/personView"
                android:layout_width="70dp"
                android:layout_height="85dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/personicon" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>